<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/started"
        android:textColor="@color/abc_search_url_text_holo"
        android:freezesText="true" />

    <LinearLayout
        android:orientation="vertical"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:text="Formal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/formalName"/>
    <TextView
        android:id="@+id/formalDate"
        android:padding="8dp"
        android:textSize="16sp"
        android:text="Time: 28/11/2014 19:15:00"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:textSize="20sp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu:"/>
    <TextView 
        android:id="@+id/formalMenu"
        android:text="MealItems"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    </LinearLayout>

    <ListView
        android:id="@+id/formalListOfPeople"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>