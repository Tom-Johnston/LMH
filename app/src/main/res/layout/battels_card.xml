<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    android:layout_marginBottom="8dp"
    >

    <RelativeLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/battelsReference"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="STPC11011" />

        <View
        android:layout_below="@+id/battelsReference"
        android:background="#1f000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp" />

        <TextView
            android:padding="4dp"
            android:id="@+id/battelsDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/battelsReference"
            android:layout_marginTop="5dp"
            android:text="Date:"
            android:textStyle="bold"/>

        <TextView
            android:layout_alignBaseline="@id/battelsDateTitle"
            android:layout_toRightOf="@id/battelsDateTitle"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/battelsDate"
            android:textSize="14sp"
            android:text="28/11/2014 00:12:00"
            />

        <TextView
            android:padding="4dp"
            android:id="@+id/battelsDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/battelsDateTitle"
            android:text="Description: "
            android:textStyle="bold"/>

        <TextView
            android:layout_alignBaseline="@+id/battelsDescriptionTitle"
            android:layout_toRightOf="@+id/battelsDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battelsDescription"
            android:text="Scholarship award 2014"/>

        <TextView
            android:padding="4dp"
            android:id="@+id/battelsAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/battelsDescriptionTitle"
            android:text="Amount: "
            android:textStyle="bold"/>

        <TextView
            android:layout_alignBaseline="@+id/battelsAmountTitle"
            android:layout_toRightOf="@+id/battelsAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battelsAmount"
            android:text="Â£116.66"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>